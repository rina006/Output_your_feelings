<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <div class="answer text-center">
      <%= form_with model: @answer, url: [@question, @answer], local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.text_area :body, class: 'form-control mb-3', id: 'js-new-answer-body', rows: 10 %>
        <%= f.submit t('defaults.answer'), class: 'btn btn-dark' %>
      <% end %>
    </div>
  </div>
</div>
