<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class='col-md-9'>
            <h3 class="card-title"><%= @article.title %></h3>
            <h5 class="card-title">user name: <%= @article.user.name %></h5>
            <h5 class="card-title">date: <%= @article.created_at %></h5>
            <p class="card-text"><%= @article.body %></p>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
