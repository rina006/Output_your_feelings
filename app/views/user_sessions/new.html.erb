<div class="container">
  <div class="row">
    <div class="login">
      <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t '.title' %></h1>
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="actions text-center">
            <%= f.submit (t 'defaults.login'), class: 'btn btn-dark' %>
          </div>
        <% end %>
        <div class='text-center'>
          <%= link_to (t 'defaults.register'), new_user_path, class:'edit-link' %>
          <%= link_to (t 'defaults.password_forget'), new_password_reset_path, class:'edit-link' %>
        </div>
      </div>
    </div>
  </div>
</div>
